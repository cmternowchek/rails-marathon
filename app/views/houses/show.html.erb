<h1><%= @house.name %></h1>
<br />
<h2><%= @house.author %></h2>
<br />
<h2><%= @house.source %></h2>
<br />
<h3><%= @house.motto %></h3>

<ul>
  <% @members.each do |dude| %>
    <li><%= dude.first_name %></li>
    <li><%= dude.last_name %></li>
    <li><%= dude.created_at.strftime("%B %d %Y") %></li>
  <% end %>
</ul>

<%= link_to "Add a House Member", new_house_member_path(@house) %>
